{
  "name": "promptforge",
  "version": "0.2.7",
  "description": "An application to manage and refine LLM prompts.",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always",
    "publish": "npm run build && electron-builder --publish always",
    "build:mac:x64": "npm run build && electron-builder --mac --x64",
    "build:win:x64": "npm run build && electron-builder --win --x64",
    "build:win:ia32": "npm run build && electron-builder --win --ia32",
    "build:linux:x64": "npm run build && electron-builder --linux --x64",
    "build:linux:armv7l": "npm run build && electron-builder --linux --armv7l",
    "build:linux:arm64": "npm run build && electron-builder --linux --arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.yourcompany.promptforge",
    "productName": "PromptForge",
    "files": [
      "dist/**/*",
      "index.html",
      "README.md",
      "FUNCTIONAL_MANUAL.md",
      "TECHNICAL_MANUAL.md",
      "VERSION_LOG.md",
      "node_modules/**/*"
    ],
    "extraResources": [
      "./README.md",
      "./FUNCTIONAL_MANUAL.md",
      "./TECHNICAL_MANUAL.md",
      "./VERSION_LOG.md"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
